{
   "editor.fontSize": 13,
   "editor.defaultFormatter": "esbenp.prettier-vscode",
   "editor.formatOnSave": true,
   "editor.autoIndent": "full",
   "editor.detectIndentation": true,
   "editor.tabSize": 3,
   "prettier.tabWidth": 3,
   "editor.insertSpaces": true,
   // Controls if quick suggestions should show up while typing
   "editor.quickSuggestions": {
      "other": true,
      "comments": true,
      "strings": true
   },
   // Controls whether suggestions should be accepted on commit characters. For example, in JavaScript, the semi-colon (`;`) can be a commit character that accepts a suggestion and types that character.
   "editor.acceptSuggestionOnCommitCharacter": true,
   // Controls if suggestions should be accepted on 'Enter' - in addition to 'Tab'. Helps to avoid ambiguity between inserting new lines or accepting suggestions. The value 'smart' means only accept a suggestion with Enter when it makes a textual change
   "editor.acceptSuggestionOnEnter": "on",
   // Controls the delay in ms after which quick suggestions will show up.
   "editor.quickSuggestionsDelay": 100,
   // Controls if suggestions should automatically show up when typing trigger characters
   "editor.suggestOnTriggerCharacters": true,
   // Controls if pressing tab inserts the best suggestion and if tab cycles through other suggestions
   "editor.tabCompletion": "on",
   // Controls whether sorting favours words that appear close to the cursor
   "editor.suggest.localityBonus": true,
   // Controls how suggestions are pre-selected when showing the suggest list
   "editor.suggestSelection": "recentlyUsed",
   // Enable word based suggestions
   "editor.wordBasedSuggestions": true,
   // Enable parameter hints
   "editor.parameterHints.enabled": true,
   "cSpell.words": ["nestjs", "signin"],
   "workbench.colorCustomizations": {
      "activityBar.activeBackground": "#ef566d",
      "activityBar.activeBorder": "#36e916",
      "activityBar.background": "#ef566d",
      "activityBar.foreground": "#15202b",
      "activityBar.inactiveForeground": "#15202b99",
      "activityBarBadge.background": "#36e916",
      "activityBarBadge.foreground": "#15202b",
      "sash.hoverBorder": "#ef566d",
      "statusBar.background": "#ea2845",
      "statusBar.foreground": "#e7e7e7",
      "statusBarItem.hoverBackground": "#ef566d",
      "statusBarItem.remoteBackground": "#ea2845",
      "statusBarItem.remoteForeground": "#e7e7e7",
      "titleBar.activeBackground": "#ea2845",
      "titleBar.activeForeground": "#e7e7e7",
      "titleBar.inactiveBackground": "#ea284599",
      "titleBar.inactiveForeground": "#e7e7e799"
   },
   "peacock.color": "#ea2845",
   "editor.codeActionsOnSave": [
      "source.organizeImports",
      "source.fixAll.eslint"
   ]
}
